{
  "manifest_version": 2,
  "version": "0.0.4",
  "name": "My Chrome Extension",
  "description": "sends message from background to content",
  "author": "Stephan Pr√§tsch",
  "icons": {
    "16": "images/puppy16.png",
    "48": "images/puppy48.png",
    "128": "images/puppy.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "browser_action": {
    "default_icon": "images/puppy.png"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "permissions": [
    "tabs",
    "http://*/",
    "https://*/"
  ]
}