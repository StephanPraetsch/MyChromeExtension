{
  "manifest_version": 2,
  "version": "0.0.3",
  "name": "My Chrome Extension",
  "description": "Prints title of current page / tab",
  "author": "Stephan Pr√§tsch",
  "icons": {
    "16": "images/puppy16.png",
    "48": "images/puppy48.png",
    "128": "images/puppy.png"
  },
  "background": {
    "scripts": [
      "popup.js"
    ],
    "persistent": true
  },
  "permissions": [
    "tabs",
    "http://*/",
    "https://*/"
  ],
  "browser_action": {
    "default_icon": "images/puppy.png",
    "default_popup": "popup.html"
  }
}